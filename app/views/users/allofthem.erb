    <th><%= sort_link @search, :title, "Title" %></th>
    <th><%= sort_link @search, :sales, "Sales" %></th>
    <th>Address</th>
    <th>Descrption</th>
 
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
