

<%= search_form_for @search, url: "/users/allofthem" do |f| %>
  <div class="field">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont %>
  </div>
  <div class="actions"><%= f.submit "Filter" %></div>
<% end %>



